function mcd() {
  if [ -z "$1" ]; then
    not_ok 'mcd: missing directory name'
    return -1
  fi

  mkdir $1 && cd $1
}

function powit() {
  if [ -z "$1" ]; then
    echo 'Using default port 5000'
    port=5000
  else
    port=$1
  fi

  if [ -z "$2" ]; then
    echo 'Using basename as domain : '`basename $PWD`
    domain=`basename $PWD`
  else
    domain=$2
  fi

  echo $port > ~/.pow/$domain

  echo "0.0.0.0:$port > $domain.dev"
}

